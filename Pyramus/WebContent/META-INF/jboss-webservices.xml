    <auth-method>BASIC</auth-method>
    <secure-wsdl-access>true</secure-wsdl-access>
  </port-component>

  <port-component>
    <ejb-name>StudentsService</ejb-name>
    <port-component-uri>PyramusWebServices/services/Students/*</port-component-uri>
    <transport-guarantee>CONFIDENTIAL</transport-guarantee>    
    <auth-method>BASIC</auth-method>
    <secure-wsdl-access>true</secure-wsdl-access>
  </port-component>

  <port-component>
    <ejb-name>UsersService</ejb-name>
    <port-component-uri>PyramusWebServices/services/Users/*</port-component-uri>
    <transport-guarantee>CONFIDENTIAL</transport-guarantee>    
    <auth-method>BASIC</auth-method>
    <secure-wsdl-access>true</secure-wsdl-access>
  </port-component>
  
</webservices>
